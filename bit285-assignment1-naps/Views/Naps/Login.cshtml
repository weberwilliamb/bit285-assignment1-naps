@model A1_Mod.UserModel
@{Layout = "_Layout";}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<body>
    <h1>Login</h1>
    <fieldset>
        <form asp-action= "Login" method="post">
            <div>
                <label>Username</label>
                <input asp-for="Email" placeholder="Model.Email" />
                <span asp-validation-for="Email">* required</span>
            </div>
            <div>
                <label>Password</label>
                <input asp-for="Password" placeholder="Model.Password" />
                <span asp-validation-for="Password">* required</span>
            </div>
            <div>
                <input type="button" value="Login" />
                <input type="button" value="Reset" />
            </div>
        </form>
    </fieldset>

</body>
