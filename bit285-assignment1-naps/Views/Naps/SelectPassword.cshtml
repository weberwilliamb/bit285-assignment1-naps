@model A1_Mod.UserModel
@{Layout = "_Layout";}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject A1_Mod.PasswordSuggestionService Suggest

<body>
    <h1>Choose a Password</h1>
    <fieldset>
        <form asp-action="SelectPassword" method="post">
            <div>
                <label>Possible Passwords</label>
                <input asp-for="Password" placeholder="@Suggest.GeneratePassword(Model)"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <input type="button" value="Submit"/>
                <input type="button" value="Reset" />
            </div>
        </form>
    </fieldset>

</body>
